#!/bin/sh
set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop services
        if [ -d /run/systemd/system ]; then
            deb-systemd-invoke stop corevpn-server.service corevpn-web.service 2>/dev/null || true
        fi
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
